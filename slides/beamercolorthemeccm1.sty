\mode<presentation>

%Cosas definidas por mi
\setbeamercolor*{title page header}{fg=rojotexto}
\setbeamercolor*{author}{fg=black}
\setbeamercolor*{date}{fg=rojotexto}
\setbeamercolor*{institute}{fg=black}
\setbeamercolor*{sectiontitle}{fg=black}
\setbeamercolor*{frametitle}{fg=rojotexto}
\setbeamercolor*{section in head/foot}{fg=white}
\setbeamercolor*{author in head/foot}{fg=white}
\setbeamercolor*{date in head/foot}{fg=gray}

%Definiendo el color de los cuadritos de los items
\setbeamercolor*{item}{fg=gristexto}

%Color de los teoremas
\setbeamercolor{block title}{use=structure,fg=rojotexto,bg=gristexto!50}
\setbeamercolor{block body}{fg=black,bg=gristexto!15}

\mode<all>